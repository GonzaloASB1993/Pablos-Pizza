rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Gallery images - Public can read, only admin can write
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Other files - Only admin can manage
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}