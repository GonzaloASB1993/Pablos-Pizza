rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Bookings - Public can create, only admin can read/update
    match /bookings/{bookingId} {
      allow create: if true; // Anyone can create bookings
      allow read, update, delete: if request.auth != null; // Only authenticated users (admin)
    }
    
    // Events - Only admin can manage
    match /events/{eventId} {
      allow read, write: if request.auth != null;
    }
    
    // Gallery - Public can read, only admin can write
    match /gallery/{imageId} {
      allow read: if true; // Public can view gallery
      allow write: if request.auth != null; // Only admin can manage gallery
    }
    
    // Reviews - Público puede leer y crear; validaciones básicas
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if
        request.resource.data.keys().hasAll(['name', 'comment', 'rating', 'createdAt'])
        && request.resource.data.name is string && request.resource.data.name.size() > 0 && request.resource.data.name.size() <= 80
        && request.resource.data.comment is string && request.resource.data.comment.size() > 0 && request.resource.data.comment.size() <= 1000
        && request.resource.data.rating is number && request.resource.data.rating >= 1 && request.resource.data.rating <= 5
        && (!('photos' in request.resource.data) || request.resource.data.photos is list)
        ;
      allow update, delete: if request.auth != null;
    }
    
    // Inventory - Only admin can manage
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }
    
    // Notifications - Only admin can manage
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Chat rooms - Public can create, admin can read all
    match /chat_rooms/{roomId} {
      allow create: if true; // Anyone can create chat rooms
      allow read, update: if request.auth != null; // Admin can manage
    }
    
    // Chat messages - Users can create for their room, admin can read all
    match /chat_messages/{messageId} {
      allow read, create: if true; // Anyone can read/create chat messages
      allow update, delete: if request.auth != null; // Only admin can manage
    }
  }
}